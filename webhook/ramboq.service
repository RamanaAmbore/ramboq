[Unit]
Description=Streamlit App for ramboq.com
After=network.target

[Service]
WorkingDirectory=/opt/ramboq
ExecStart=/bin/bash -c 'source /opt/ramboq/venv/bin/activate && streamlit run app.py --server.port=8502 --server.address=0.0.0.0 2>>&1 | tee -a /opt/ramboq/.log/short_error_file /opt/ramboq/.log/error_file'
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target

